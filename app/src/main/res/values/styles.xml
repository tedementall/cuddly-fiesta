<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="SettingsRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="SettingsRow.Icon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:tint">?attr/colorOnSurfaceVariant</item>
    </style>

    <style name="SettingsRow.TextPrimary">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="SettingsRow.Trailing">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:tint">?attr/colorOnSurfaceVariant</item>
    </style>

    <style name="SettingsRow.TextRight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>

    <style name="SettingsRow.Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:alpha">0.1</item>
        <item name="android:background">?attr/colorOnSurface</item>
    </style>

</resources>
